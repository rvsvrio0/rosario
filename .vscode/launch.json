  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch index.html in Vivaldi",
      "file": "${workspaceFolder}/${input:htmlFile}",
    }
  ],
  "inputs": [
    {
      "id": "htmlFile",
      "type": "pickString",
      "description": "Select the HTML file to launch",
      "options": [
        "index.html"
      ]
    }
  ]
    }